{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,

    "baseUrl": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ]
}
