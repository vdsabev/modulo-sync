{
  "private": true,
  "name": "modulo-sync",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node ./build/index.js",
    "test": "jest",
    "jest": "jest --watch"
  },
  "dependencies": {
    "@google-cloud/storage": "1.1.0",
    "@types/chokidar": "1.6.0",
    "@types/dotenv": "4.0.0",
    "@types/jest": "19.2.3",
    "@types/node": "7.0.18",
    "chokidar": "1.7.0",
    "dotenv": "4.0.0",
    "firebase-admin": "4.2.1",
    "jest": "20.0.1",
    "ts-jest": "20.0.3",
    "typescript": "2.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js}",
      "!**/*.test.{ts,tsx,js}",
      "!**/*.d.ts",
      "!node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
