{
  "private": true,
  "name": "modulo-sync",
  "version": "0.7.0",
  "license": "MIT",
  "bin": {
    "modulo-sync": "./build/index.js"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "node ./build/index.js",
    "test": "jest",
    "jest": "jest --watch"
  },
  "dependencies": {
    "@google-cloud/storage": "1.2.1",
    "@types/chokidar": "1.7.2",
    "@types/glob": "5.0.32",
    "@types/jest": "20.0.8",
    "@types/js-yaml": "3.9.1",
    "chokidar": "1.7.0",
    "compote-fp": "0.1.2",
    "firebase-admin": "5.2.1",
    "glob": "7.1.2",
    "jest": "20.0.4",
    "js-yaml": "3.9.1",
    "npm-run": "4.1.2",
    "rimraf": "2.6.1",
    "ts-jest": "20.0.14",
    "typescript": "2.5.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js}",
      "!**/*.test.{ts,tsx,js}",
      "!**/*.d.ts",
      "!(build|coverage|node_modules|posts|private)/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
