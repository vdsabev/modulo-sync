{
  "private": true,
  "name": "modulo-sync",
  "version": "0.5.0",
  "license": "MIT",
  "bin": {
    "modulo-sync": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "node ./build/index.js",
    "test": "jest",
    "jest": "jest --watch"
  },
  "dependencies": {
    "@google-cloud/storage": "1.1.1",
    "@types/chokidar": "1.6.0",
    "@types/glob": "5.0.30",
    "@types/jest": "19.2.3",
    "chokidar": "1.7.0",
    "dotenv": "4.0.0",
    "firebase-admin": "5.0.0",
    "glob": "7.1.1",
    "jest": "20.0.3",
    "ts-jest": "20.0.4",
    "typescript": "2.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js}",
      "!**/*.test.{ts,tsx,js}",
      "!**/*.d.ts",
      "!(build|coverage|node_modules|posts|private)/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "modulo": {
    "//": "Example configuration for synchronizing a local folder to a remote firebase database",
    "sync": {
      "keys": {
        "firebase": "./posts/firebase.json",
        "gcs": "./posts/gcs.json"
      },
      "stores": [
        { "from": "local://posts/:postId/content.md", "to": "firebase://postContent/:postId" }
      ]
    }
  }
}
