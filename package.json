{
  "private": true,
  "name": "modulo-sync",
  "version": "0.7.0",
  "license": "MIT",
  "bin": {
    "modulo-sync": "./build/index.js"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "tsc && node ./build/index.js",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "@google-cloud/storage": "1.2.1",
    "@types/chokidar": "1.7.2",
    "@types/glob": "5.0.32",
    "chokidar": "1.7.0",
    "compote-fp": "0.1.2",
    "firebase-admin": "5.2.1",
    "glob": "7.1.2",
    "npm-run": "4.1.2",
    "rimraf": "2.6.1"
  },
  "devDependencies": {
    "@types/jest": "22.2.2",
    "jest": "22.4.3",
    "ts-jest": "22.4.2",
    "typescript": "2.8.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/*.test.{ts,tsx,js,jsx}",
      "!**/*.d.ts",
      "!(build|coverage|node_modules|posts|private)/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "\\.test\\.(ts|tsx|js|jsx)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
